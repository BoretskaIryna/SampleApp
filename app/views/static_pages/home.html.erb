<% provide(:title, "Home") %>

<% if customer_signed_in?%>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'customers/shared/customer_info' %>
        </section>

      </aside>
    </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to the Sample App</h1>

  <h2>
    This is the home page for the
    <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h2>

  <%= link_to "Sign up now! as User", new_user_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Sign up now! as Customer", new_customer_registration_path, class: "btn btn-lg btn-primary" %>
</div>

<img alt="Rails logo" src="/assets/rails.png" />

<%end %>
